<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kotlin.base.widgets.HeaderBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="故障反馈" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="false">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_bottom"
                android:orientation="horizontal"
                android:paddingTop="@dimen/common_padding"
                android:paddingRight="@dimen/common_padding"
                android:paddingBottom="@dimen/common_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="车种"
                    android:textSize="@dimen/text_middle_size" />

                <TextView
                    android:id="@+id/mTypeTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/icon_arrow_drop_down"
                    android:text="请选择车种" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_bottom"
                android:orientation="horizontal"
                android:paddingTop="@dimen/common_padding"
                android:paddingRight="@dimen/common_padding"
                android:paddingBottom="@dimen/common_padding">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="车型"
                    android:textSize="@dimen/text_middle_size" />

                <TextView
                    android:id="@+id/mModelTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/icon_arrow_drop_down"
                    android:text="请选择车型" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_bottom"
                android:orientation="horizontal"
                android:paddingTop="@dimen/common_padding"
                android:paddingRight="@dimen/common_padding"
                android:paddingBottom="@dimen/common_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="车号"
                    android:textSize="@dimen/text_middle_size" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入车号" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_bottom"
                android:orientation="horizontal"
                android:paddingTop="@dimen/common_padding"
                android:paddingRight="@dimen/common_padding"
                android:paddingBottom="@dimen/common_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="故障说明"
                    android:textSize="@dimen/text_middle_size" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入说明" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_margin"
                android:text="请拍照上传图片（最多9张）"
                android:textSize="@dimen/text_middle_size" />

            <com.kotlin.base.widgets.ImagePickerView
                android:id="@+id/mImagePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"></com.kotlin.base.widgets.ImagePickerView>

            <info.hoang8f.widget.FButton
                android:id="@+id/mSendBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_margin"
                android:layout_marginBottom="30dp"
                android:text="发送"
                android:textColor="@color/common_white"
                android:textSize="@dimen/text_big_size" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>