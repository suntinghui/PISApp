<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kotlin.base.widgets.HeaderBar
        style="@style/MatchWrap"
        app:titleText="信息详情" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/common_padding_middle"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mPublishTitleTv"
                style="@style/MatchWrap"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginRight="@dimen/common_margin"
                android:gravity="center"
                android:lineSpacingMultiplier="1.2"
                android:text="标题"
                android:textColor="@color/text_dark"
                android:textSize="@dimen/text_large_size" />


            <TextView
                android:id="@+id/mContentTv"
                style="@style/WrapWrap"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:lineSpacingMultiplier="1.3"
                android:text="内容"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_big_size" />

            <TextView
                android:id="@+id/mDutyUserTv"
                style="@style/MatchWrap"
                android:layout_weight="1"
                android:gravity="right"
                android:text="发布人"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_big_size" />

            <TextView
                android:id="@+id/mSubmitTimeTv"
                style="@style/MatchWrap"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="2018-10-13 19:15:31"
                android:textColor="@color/text_normal"
                android:textSize="@dimen/text_big_size" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>