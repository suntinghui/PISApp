<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kotlin.base.widgets.HeaderBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="历史故障"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:paddingTop="@dimen/common_padding_small"
        android:paddingBottom="@dimen/common_padding_small"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mTypeTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/icon_arrow_drop_down"
            android:gravity="center_vertical"
            android:text="车种"
            android:textAlignment="center"
            android:textSize="@dimen/text_middle_size" />

        <View
            android:layout_width="1px"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/common_margin_small"
            android:layout_marginRight="@dimen/common_margin_small"
            android:background="@color/common_divider" />

        <TextView
            android:id="@+id/mModelTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:drawableRight="@drawable/icon_arrow_drop_down"
            android:gravity="center_vertical"
            android:text="车型"
            android:textAlignment="center"
            android:textSize="@dimen/text_middle_size" />

        <View
            android:layout_width="1px"
            android:layout_height="35dp"
            android:layout_marginLeft="@dimen/common_margin_small"
            android:layout_marginRight="@dimen/common_margin_middle"
            android:background="@color/common_divider" />

        <EditText
            android:id="@+id/mNumTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="车号"
            android:textSize="@dimen/text_middle_size" />

        <info.hoang8f.widget.FButton
            android:id="@+id/mSearchBtn"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="@dimen/common_margin"
            android:layout_marginRight="@dimen/common_margin"
            android:text="检索"
            android:textColor="@color/common_white"
            android:textSize="@dimen/text_small_size" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/common_divider" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mHistoryRv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/common_gray"
        android:scrollbars="vertical" />

</LinearLayout>