<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.kotlin.base.widgets.HeaderBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleText="任务信息" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <com.kotlin.base.widgets.LabelTextView
                android:id="@+id/mTitleView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="任务标题"></com.kotlin.base.widgets.LabelTextView>

            <com.kotlin.base.widgets.LabelTextView
                android:id="@+id/mContentView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="任务内容"></com.kotlin.base.widgets.LabelTextView>

            <com.kotlin.base.widgets.LabelTextView
                android:id="@+id/mStateView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="任务标题"></com.kotlin.base.widgets.LabelTextView>

            <LinearLayout
                android:id="@+id/mStateLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_bottom"
                android:orientation="horizontal"
                android:paddingTop="@dimen/common_padding"
                android:paddingRight="@dimen/common_padding"
                android:paddingBottom="@dimen/common_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="完成状态"
                    android:textSize="@dimen/text_middle_size" />

                <TextView
                    android:id="@+id/mStateTv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_weight="1"
                    android:drawableRight="@drawable/icon_arrow_drop_down"
                    android:text="" />
            </LinearLayout>

            <com.kotlin.base.widgets.LabelTextView
                android:id="@+id/mRemarkView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:labelText="备注"></com.kotlin.base.widgets.LabelTextView>

            <LinearLayout
                android:id="@+id/mRemarkLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_bottom"
                android:orientation="horizontal"
                android:paddingTop="@dimen/common_padding"
                android:paddingRight="@dimen/common_padding"
                android:paddingBottom="@dimen/common_padding">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:gravity="right"
                    android:text="备注"
                    android:textSize="@dimen/text_middle_size" />

                <EditText
                    android:id="@+id/mRemarkEt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/common_margin"
                    android:layout_weight="1"
                    android:background="@drawable/border_all"
                    android:hint="请输入备注"
                    android:lines="4"
                    android:padding="@dimen/common_padding_small" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_marginTop="@dimen/common_margin"
                android:text="请拍照上传图片（最多9张）"
                android:textSize="@dimen/text_middle_size" />

            <com.kotlin.base.widgets.ImagePickerView
                android:id="@+id/mImagePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"></com.kotlin.base.widgets.ImagePickerView>

            <info.hoang8f.widget.FButton
                android:id="@+id/mSendBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/common_margin"
                android:layout_marginBottom="30dp"
                android:text="确  定"
                android:textColor="@color/common_white"
                android:textSize="@dimen/text_big_size" />


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>